<h1>Books</h1>

<%= form_with url: books_path, method: :get, local: true do |form| %>
  <div>
    <%= form.label :query, "Search:" %>
    <%= form.text_field :query, value: params[:query], placeholder: "Enter title or author" %>
    <%= form.submit "Search" %>
  </div>
<% end %>

<% @books.each do |book| %>
  <div>
    <p>Title: <%= link_to book.title, book_path(book) %></p>
    <p>Year: <%= book.year %></p>
    <p>Pages: <%= book.pages %></p>
  </div>
<% end %>

<%= paginate @books %>